{
  "name": "semantic-ui-react-input-file",
  "description": "a semantic-ui-react compatible file input control",
  "version": "0.0.0--semantic-release",
  "main": "src/InputFile.js",
  "files": [
    "src"
  ],
  "repository": "git@github.com:cdaringe/semantic-ui-react-input-file.git",
  "author": "cdaringe <cdaringe@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "semantic-ui-react": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@types/react": "17.0.8",
    "@typescript-eslint/parser": "4.25.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "prettier-standard": "16.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "semantic-release": "17.4.3",
    "semantic-ui-react": "2.0.3",
    "standard": "16.0.3",
    "typescript": "4.2.4"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier-standard '{src,test,scripts}/**/*.{js,jsx,ts,tsx}'",
    "lint": "standard '{src,test,scripts}/**/*.{js,jsx,ts,tsx}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,test,scripts}/**/*.{js,jsx,ts,tsx}": [
        "yarn format",
        "yarn lint",
        "git add"
      ]
    }
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "standardPlugins": [
      "typescript"
    ],
    "ignore": [
      "**/*.d.ts"
    ]
  },
  "keywords": [
    "semantic-ui-react",
    "semantic",
    "ui",
    "react",
    "input",
    "file",
    "control",
    "component"
  ]
}
